{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "Node16",
    "moduleResolution": "Node16",

    /* Emit */
    "declaration": true,
    "outDir": "./lib",

    /* Interop Constraints */
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },

  "include": ["./src/**/*"]
}
